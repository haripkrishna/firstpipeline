pipeline {
    agent any
    environment {
        CONDA_ENV = 'DevOpsMyVirtual'  // Replace 'myenv' with your actual Conda environment name
    }
    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/haripkrishna/firstpipeline'
            }
        }
        stage('Set up Environment') {
            steps {
                sh '''
                source ~/anaconda3/etc/profile.d/conda.sh
                conda activate DevOpsMyVirtual
                pip install -r requirements.txt
                '''
            }
        }
        stage('Run Tests') {
            steps {
                script {
                    def pytestExists = sh(script: '''
                    source ~/anaconda3/etc/profile.d/conda.sh
                    conda activate $CONDA_ENV
                    conda list pytest | grep pytest || echo "notfound"
                    ''', returnStdout: true).trim() != "notfound"
                    
                    if (pytestExists) {
                        sh '''
                        source ~/anaconda3/etc/profile.d/conda.sh
                        conda activate $CONDA_ENV
                        pytest
                        '''
                    } else {
                        echo 'Skipping tests: pytest not installed'
                    }
                }
            }
        }
    }
}